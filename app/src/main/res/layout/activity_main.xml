<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/gray"
    tools:context=".ui.main.MainActivity">

    <!--Bar Layout-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvSelamatDatang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="SELAMAT DATANG"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSelamatDatang"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Admin"
            android:textColor="@color/purple_500"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/admin" />

    </RelativeLayout>

    <!--Container Content Layout-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="430dp"
        app:cardCornerRadius="17dp"
        app:cardElevation="0dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!--Content-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rounds_neue"
                android:textColor="@color/black"
                android:text="List Chapter Pronoun Test"/>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_marginTop="20dp" />

            <!--Chapter 1-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKelolaCh1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/ripple_effect"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivKelolaSoalCh1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/soalchapter1" />

                    <TextView
                        android:id="@+id/tvKelolaDataSoalCh1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/ivKelolaSoalCh1"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Kelola Data Soal"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvKelolaDataSoalCh1"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/ivKelolaSoalCh1"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Chapter Noun" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Chapter 2-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKelolaCh2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/ripple_effect"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivKelolaSoalCh2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/soalchapter2" />

                    <TextView
                        android:id="@+id/tvKelolaDataSoalCh2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/ivKelolaSoalCh2"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Kelola Data Soal"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvKelolaDataSoalCh2"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/ivKelolaSoalCh2"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Chapter House" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Chapter 3-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKelolaCh3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/ripple_effect"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivKelolaSoalCh3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/soalchapter3" />

                    <TextView
                        android:id="@+id/tvKelolaDataSoalCh3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/ivKelolaSoalCh3"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Kelola Data Soal"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvKelolaDataSoalCh3"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/ivKelolaSoalCh3"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Chapter What is Your Name" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <!--Chapter 4-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnKelolaCh4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/ripple_effect"
                android:layout_marginTop="20dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivKelolaSoalCh4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/soalchapter4" />

                    <TextView
                        android:id="@+id/tvKelolaDataSoalCh4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/ivKelolaSoalCh4"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Kelola Data Soal"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvKelolaDataSoalCh4"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_toEndOf="@+id/ivKelolaSoalCh4"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="Chapter Where Do You Live" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>