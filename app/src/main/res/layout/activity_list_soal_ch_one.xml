<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".ui.edit.ListSoalChOneActivity">

    <TextView
        android:id="@+id/tvChapterNoun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHAPTER NOUN"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_soal_noun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvChapterNoun"
        android:scrollbars="vertical"
        tools:listitem="@layout/list_soal_ch_one" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_baseline_add_24"
        android:contentDescription="@string/add"
        android:layout_margin="16dp" />
</RelativeLayout>